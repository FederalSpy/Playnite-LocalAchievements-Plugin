<Window x:Class="LocalAchievements.AchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LocalAchievements"
        Title="{Binding WindowTitle}"
        Height="700" Width="600"
        MinWidth="550" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:SimpleTextConverter x:Key="LocConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1F1F1F" Padding="15" BorderBrush="#333" BorderThickness="0,0,0,1">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <TextBlock Name="TitleText" Text="Logros" Foreground="#E0E0E0" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Name="ProgressTextLabel" Text="0/0 (0%)" Foreground="#888" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="12"/>
                </Grid>

                <Grid>
                    <ProgressBar Name="AchProgressBar" Height="6" Background="#333" BorderThickness="0" Foreground="#4CAF50"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#181818" Padding="10" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <TextBox Name="TxtSearch" Height="28" VerticalContentAlignment="Center" Padding="5,0"
                             TextChanged="TxtSearch_TextChanged"
                             Background="#252526" Foreground="White" BorderBrush="#3E3E42"
                             CaretBrush="White">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="{Binding Source={x:Static local:Localization.CurrentLanguage}, Converter={StaticResource LocConverter}, ConverterParameter='FilterSearch'}"
                               IsHitTestVisible="False" Foreground="#666" Margin="8,0,0,0" VerticalAlignment="Center"
                               Visibility="{Binding ElementName=TxtSearch, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <ComboBox Grid.Column="1" Name="ComboSort" Width="140" Height="28" Margin="0,0,5,0"
                          DisplayMemberPath="Label"
                          SelectionChanged="ComboSort_SelectionChanged"/>

                <Button Grid.Column="2" Name="BtnOrder" Content="⬇" Width="40" Height="28" Margin="0,0,5,0"
                        Click="BtnOrder_Click" FontSize="16" FontWeight="Bold"
                        Background="#333" Foreground="#E0E0E0" BorderBrush="#444"/>

                <Button Grid.Column="3" Content="↺" Width="30" Height="28" 
                        Click="BtnReset_Click"
                        ToolTip="Reset Filters"
                        Background="#333" Foreground="#E0E0E0" BorderThickness="0"/>
            </Grid>
        </Border>

        <ListBox Grid.Row="2" Name="AchList" Background="#121212" BorderThickness="0" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Margin" Value="5,2"/>
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#333"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#252526"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Name="ContentLayer">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="{Binding ImageUrl}" Width="50" Height="50" VerticalAlignment="Top"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Description}" Foreground="#AAAAAA" FontSize="12" TextWrapping="Wrap" Margin="0,3,0,0"/>
                                <TextBlock Text="{Binding UnlockedDate, StringFormat={}{0:g}}" Foreground="#4CAF50" FontSize="10" Margin="0,2,0,0"
                                           Visibility="{Binding IsUnlocked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0" MinWidth="90">
                                <Border Background="#0D280D" BorderBrush="#2E7D32" BorderThickness="1" CornerRadius="4" Padding="6,2" Margin="0,0,0,6"
                                        HorizontalAlignment="Right"
                                        Visibility="{Binding IsUnlocked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✔" Foreground="#4CAF50" FontWeight="Bold" FontSize="11" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding DataContext.TextUnlocked, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="#A5D6A7" FontSize="10" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#252526" BorderBrush="#444" BorderThickness="1" CornerRadius="4" Padding="6,2" Margin="0,0,0,6"
                                        HorizontalAlignment="Right">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUnlocked}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔒" Foreground="#888" FontSize="10" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding DataContext.TextLocked, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="#888" FontSize="10" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="{Binding Rarity, StringFormat={}{0}%}" Foreground="#FFD700" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <ToggleButton Grid.Column="0" Grid.ColumnSpan="3" Name="SpoilerOverlay" Cursor="Hand" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="#CC000000" CornerRadius="3" BorderBrush="#D32F2F" BorderThickness="1">
                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                                        <TextBlock Text="{Binding Source={x:Static local:Localization.CurrentLanguage}, Converter={StaticResource LocConverter}, ConverterParameter='SortSecret'}" 
                                                                   Foreground="#FF5252" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>

                                                        <TextBlock Text="{Binding Source={x:Static local:Localization.CurrentLanguage}, Converter={StaticResource LocConverter}, ConverterParameter='ClickToReveal'}" 
                                                                   Foreground="#CCC" FontSize="11" Margin="0,5,0,0" FontStyle="Italic"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSecret}" Value="True"/>
                                                <Condition Binding="{Binding IsUnlocked}" Value="False"/>
                                                <Condition Binding="{Binding DataContext.SpoilerEnabled, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding ElementName=SpoilerOverlay, Path=Visibility}" Value="Visible">
                            <Setter TargetName="ContentLayer" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="15" KernelType="Gaussian"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>