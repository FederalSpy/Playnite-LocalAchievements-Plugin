<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Achievement Notification"
        Height="118" Width="470"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:4" Duration="0:0:0.45"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="#DD262626" CornerRadius="8" BorderBrush="#4A4A4A" BorderThickness="1" Margin="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.45"/>
        </Border.Effect>

        <Grid Margin="10,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="84"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Width="74"
                    Height="74"
                    VerticalAlignment="Center"
                    CornerRadius="10"
                    BorderBrush="#5D5D5D"
                    BorderThickness="1"
                    Background="#1F1F1F"
                    SnapsToDevicePixels="True">
                <Image Source="{Binding ImageUrl}"
                       Stretch="UniformToFill"
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Clip>
                        <RectangleGeometry Rect="0,0,74,74" RadiusX="10" RadiusY="10"/>
                    </Image.Clip>
                </Image>
            </Border>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="8,0,2,0">

                <TextBlock Text="{Binding Header}"
                           Foreground="#CFCFCF"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Margin="0,0,0,3"/>

                <TextBlock Text="{Binding Title}"
                           Foreground="#FFFFFF"
                           FontSize="17"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           MaxHeight="44"
                           Margin="0,0,0,4"/>

                <TextBlock Text="{Binding Description}"
                           Foreground="#E2E2E2"
                           FontSize="13"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           MaxHeight="36"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
